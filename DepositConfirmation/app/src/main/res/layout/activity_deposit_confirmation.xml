<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DepositConfirmation">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frontPic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delFrontBtn"
        android:layout_alignBottom="@+id/frontPic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backPic"
        android:layout_below="@+id/frontPic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="81dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delBackBtn"
        android:layout_alignBottom="@+id/backPic"
        android:layout_alignRight="@+id/delFrontBtn"
        android:layout_alignEnd="@+id/delFrontBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Account for Deposit"
        android:id="@+id/depostAcctTxtVw"
        android:layout_below="@+id/backPic"
        android:layout_toRightOf="@+id/backPic"
        android:layout_toEndOf="@+id/backPic"
        android:layout_marginTop="42dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acctTxt"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/backPic"
        android:layout_toLeftOf="@+id/delBackBtn"
        android:layout_toStartOf="@+id/delBackBtn"
        android:text="12345678 Chequing Account"
        android:clickable="false"
        android:editable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount to Deposit"
        android:id="@+id/depositAmtTxt"
        android:layout_below="@+id/acctTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/amtTxt"
        android:layout_below="@+id/depositAmtTxt"
        android:layout_toRightOf="@+id/backPic"
        android:layout_toEndOf="@+id/backPic"
        android:layout_marginTop="40dp"
        android:text="99.99" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Deposit"
        android:id="@+id/sendBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
